<core:FragmentDefinition xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Dialog id="OrderRejectDialog" title="반려 사유 입력">
        <content>
            <form:SimpleForm id="OrderRejectForm" editable="true" layout="ResponsiveGridLayout">
                <form:content>
                    <Label id="_IDGenLabel1" text="반려 사유">
                        <layoutData>
                            <l:GridData id="_IDGenGridData1" span="XL2 L2 M2 S12" />
                        </layoutData>
                    </Label>
                    <TextArea id="RejectReason" height="10rem">
                        <layoutData>
                            <l:GridData id="_IDGenGridData2" span="XL10 L10 M10 S12" linebreak="true" />
                        </layoutData>
                    </TextArea>
                </form:content>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button id="_IDGenButton1" text="확인" press=".onInputRejectReason" />
        </beginButton>
        <endButton>
            <Button id="_IDGenButton2" text="취소" press=".onCancelRejectReason" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>